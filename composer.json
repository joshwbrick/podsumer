{
    "name": "brickner/podsumer",
    "description": "An open, self-hosted podcatcher.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Brickner\\Podsumer\\": "src/Brickner/Podsumer"
        }
    },
    "authors": [
        {
            "name": "y"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^10.4"
    },
    "scripts": {
        "test": "phpunit tests",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-filter src --coverage-clover=clover.xml tests",
        "coverage-dev": "XDEBUG_MODE=coverage phpunit --coverage-filter src --coverage-html=coverage tests"
    }
}

